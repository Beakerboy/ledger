/**
 * Implements hook_permission().
 */
function ledger_ui_permission() {
  return array(
    'view ledger home' => array(
      'title' => t('View Ledger Home'),
      'description' => t('View the Ledger Home page.'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function ledger_ui_menu() {
  $items = array();

  // Top level "Ledger" container.
  $items['ledger'] = array(
    'title' => 'Ledger',
    'description' => 'Manage books, accounts, and transactions.',
    'page callback' => 'ledger_ui_page_callback',
    'access arguments' => array('view ledger home'),
  );

  // Ledger Settings container
  $items['admin/config/ledger'] = array(
    'title' => 'Ledger',
    'description' => 'Administer ledger settings',
    'page callback' => 'system_admin_menu_block_page',
    'access arguments' => array('administer ledger'),
    'file path' => drupal_get_path('module', 'system'),
    'file' => 'system.admin.inc',
  );

  return $items;
}

